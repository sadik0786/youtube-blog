<%- include("./layouts/header") %>
    <%- include("./layouts/nav") %>

        <div class="container mt-3">
            <div class="row justify-content-between">
                <div class="col-lg-8">
                    <h2 style="margin-bottom: 1rem;">
                        <%= blogs.title %>
                    </h2>
                    <img src="<%= blogs.coverImageURL %>" style="width:100%;" />
                    <p style="color: #232323;font-size: 1.118rem;margin-top: 20px;">
                        <%= blogs.body %>
                    </p>
                    <p style="color: #232323;font-size: 1.118rem;margin-top: 20px;">Comments (<span style="font-weight: 700;">
                            <%= comments.length %>
                        </span>)
                    </p>
                    <img src="<%= blogs.createdBy.profileImageURL %>" style="width:30px;margin-right: 8px;" />
                    <span style="font-size: 18px;font-weight: 600;">
                        <%= blogs.createdBy.fullName %>
                    </span>
                    <% if (locals.user) { %>
                        <form class="mt-3" action="/blog/comment/<%= blogs._id %>" method="post">
                            <input type="text" name="content" class="form-control w-50" placeholder="Write Comment..." />
                            <button type="submit" class="btn btn-warning my-2">Add Comment</button>
                            </form>
                            <% } %>
                                <div class="mt-3">
                                    <% comments.forEach(comment=> { %>
                                        <img src="<%= comment.createdBy.profileImageURL %>" style="width:30px;margin-right: 8px;" />
                                        <span style="font-size: 15px;font-weight: 400;font-style: italic;">
                                            <%= comment.createdBy.fullName %>
                                        </span>
                                        <p>
                                            <%= comment.content %> <br />
                                                <span>
                                                    <%= comment.createdAt %>
                                                </span>
                                        </p>
                                        <% }) %>
                                            </div>
                                            </div>
                                            <div class="col-lg-2">
                                                <p style="color: #232323;font-size: 1.25rem;margin-top: 20px;margin-top: 0px;font-weight: 600;">
                                                    Recent blog
                                                </p>
                                                <div class="d-flex flex-column">
                                                    <% recentBlogs.forEach(recent=> { %>
                                                        <div>
                                                            <img src="<%= recent.coverImageURL %>" style="width:100%;" />
                                                            <p style="margin: 5px 0px;line-height: 15px;font-size: 14px;font-weight: 500;">
                                                                <%= recent.title.substring(0, 22) %>
                                                            </p>
                                                            <p style="margin: 10px 0px;line-height: 12px;font-size: 12px;">
                                                                <%= recent.body.substring(0, 50) %>...
                                                            </p>
                                                            <a href="/blog/<%= recent._id %>">Read More</a>
                                                            <hr />
                                                        </div>
                            <% }) %>
                    </div>
                </div>
                </div>
        </div>


        <%- include("./layouts/footer") %>